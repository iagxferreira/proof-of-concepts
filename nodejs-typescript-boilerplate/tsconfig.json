{
    "compilerOptions": {
        "incremental": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "tests"]
}
