{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "jest"],
  "rules": {
    "max-len": ["error", 80],
    "indent": ["error", 2],
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "no-console": "off"
  }
}
